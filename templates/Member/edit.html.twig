{% extends 'Home/base.html.twig' %}

{% block javascript %}
    <script src="{{ asset('javascript/User/edit.js') }}"></script>
    <script src="{{ asset('javascript/Member/phone.js') }}"></script>
    <script src="{{ asset('javascript/library/jQuery-Mask-1.14/jquery.mask.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/User/edit.css') }}">
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">Accueil</a>
    </li>
    {% if is_granted("ROLE_GESTION") %}
    <li class="breadcrumb-item">
        <a href="{{ path('member_list') }}">Liste des adhérent·es</a>
    </li>
    {% endif %}
    <li class="breadcrumb-item">
        <a href="{{ path('member_show', { 'id': member.id }) }}">
            Profil de {{ member.firstName }} {{ member.lastName }}
        </a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        Éditer le profil de {{ member.firstName }} {{ member.lastName }}
    </li>
{% endblock %}

{% block body %}
<br>
<div class="container">
    <div class="row">

        <div class="col-8 col-md-2">
            <ul class="list-group">
              <a href="{{ path('member_show', { 'id': member.id }) }}" class="list-group-item list-group-item-action">Profil</a>
              <a href="#" class="list-group-item list-group-item-action">Adhésions</a>
              <a href="#" class="list-group-item list-group-item-action">Dons</a>
              <a href="{{ path('member_edit', { 'id': member.id }) }}" class="list-group-item list-group-item-action active">Édition</a>
            </ul>
        </div>



        <div class="col-12 col-md-10">

            <div class="col-12 col-md-10">
                    <div class="row">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col text-left">
                            <h1>Édition de l'adhérent.e</h1>
                        </div>
                        <div class="col text-right">
                            <button data-toggle="modal" data-target="#confirmation-modal" class="btn btn-danger"><i class="icon ion-md-trash"></i>&nbsp;Supprimer {{ member.firstName }}</button>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
                <p> Les champs notés avec * sont requis. </p>

        {{ form_start(member_edit, {'attr': {'id': 'form-edit-member'}}) }}
                <div class="form-group">
                    {{ form_label(member_edit.denomination)}} *
                    {{ form_widget(member_edit.denomination)}}
                </div>

                <div class="form-group">
                    {{ form_label(member_edit.firstname)}} *
                    {{ form_widget(member_edit.firstname)}}
                </div>

                <div class="form-group">
                    {{ form_label(member_edit.lastname)}} *
                    {{ form_widget(member_edit.lastname)}}
                </div>

                <div class="form-group">
                    {% for address in member_edit.addresses %}
                        {{ form_widget(address) }}
                        {{ form_label(address) }}
                    {% endfor %}
                </div>

                <div class="form-group">
                    {{ form_label(member_edit.emailAddress)}}
                    {{ form_widget(member_edit.emailAddress)}}
                </div>

                <div class="form-group">
                    {{ form_label(member_edit.isReceivingNewsletter)}}
                    {{ form_widget(member_edit.isReceivingNewsletter)}}
                    {{ form_label(member_edit.newsletterDematerialization)}}
                    {{ form_widget(member_edit.newsletterDematerialization)}}
                </div>

                <div class="form-group">
                    {{ form_label(member_edit.homePhoneNumber)}}
                    {{ form_widget(member_edit.homePhoneNumber)}}
                    {{ form_help(member_edit.homePhoneNumber)}}
                </div>

                <div class="form-group">
                    {{ form_label(member_edit.cellPhoneNumber)}}
                    {{ form_widget(member_edit.cellPhoneNumber)}}
                    {{ form_help(member_edit.cellPhoneNumber)}}
                </div>

                <div class="form-group">
                    {{ form_label(member_edit.workPhoneNumber)}}
                    {{ form_widget(member_edit.workPhoneNumber)}}
                    {{ form_help(member_edit.workPhoneNumber)}}
                </div>

                <div class="form-group">
                    {{ form_label(member_edit.workFaxNumber)}}
                    {{ form_widget(member_edit.workFaxNumber)}}
                    {{ form_help(member_edit.workFaxNumber)}}
                </div>

                <div class="form-group">
                    {{ form_label(member_edit.observations)}}
                    {{ form_widget(member_edit.observations)}}
                    {{ form_help(member_edit.observations)}}
                </div>

                {% if is_granted('ROLE_GESTION_SENSIBLE') %}
                    <div class="form-group">
                        {{ form_label(member_edit.sensitiveObservations)}}
                        {{ form_widget(member_edit.sensitiveObservations)}}
                        {{ form_help(member_edit.sensitiveObservations)}}
                    </div>
                {% endif %}

                {% do member_edit.sensitiveObservations.setRendered %}

        {{ form_end(member_edit) }}

        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <a href="{{ path('member_list') }}" class="btn btn-secondary">
                <i class="icon ion-md-arrow-back"></i>&nbsp;Retourner à la liste des adhérent⋅es
            </a>
        </div>
        <div class="col text-right">
            <button
            id="edit-member-submit-button"
            type="submit"
            form="form-edit-member"
            class="btn btn-primary">
                Enregistrer les modifications
            </button>
        </div>
    </div>
</div>

<div id="confirmation-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>Souhaitez-vous réellement supprimer ce profil ?</p>
                <div class="alert alert-warning" role="alert">
                    <i class="icon ion-md-alert"></i>&nbsp;Les données seront supprimées de manière définitive.
                </div>
            </div>
            <div class="modal-footer">
                <div class="col">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="icon ion-md-arrow-back"></i>&nbsp;Annuler</button>
                </div>
                <div class="col text-right">
                    {{ form_start(delete_form) }}
                    <button id="delete_button" type="submit" class="btn btn-danger"><i class="icon ion-md-trash"></i>&nbsp;Supprimer {{ member.firstName }}</button>
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
