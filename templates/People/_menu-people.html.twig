{% block body %}
    {% set show_profile = show_profile is defined ? show_profile : null %}
    {% set show_memberships = show_memberships is defined ? show_memberships : null %}
    {% set show_donations = show_donations is defined ? show_donations : null %}
    {% set edit_profile = edit_profile is defined ? edit_profile : null %}
    
    <ul class="list-group">
        <a href="{{ path('people_show', { 'id': people.id }) }}"
           class="list-group-item list-group-item-action {{ show_profile }}"
           >
            {% trans %}Profil{% endtrans %}
        </a>
        <a href="{{ path('people_memberships_show', { 'id': people.id }) }}"
           class="list-group-item list-group-item-action {{ show_memberships }}"
           >
            {% trans %}Adhésions{% endtrans %}
        </a>
        <a href="#"
           class="list-group-item list-group-item-action disabled {{ show_donations }}"
           data-toggle="tooltip"
           title="Work in progress"
           >
            {% trans %}Dons{% endtrans %}
        </a>
    </ul>
    <h4 class="mt-4">{% trans %}Édition{% endtrans %}</h4>
    <ul class="list-group">
        <a href="{{ path('people_edit', { 'id': people.id }) }}"
           class="list-group-item list-group-item-action {{ edit_profile }}"
           >
            <i class="icon ion-md-create"></i>&nbsp;{% trans %}Profil{% endtrans %}
        </a>
    </ul>
{% endblock %}
