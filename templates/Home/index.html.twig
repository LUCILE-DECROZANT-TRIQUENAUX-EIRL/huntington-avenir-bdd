{% extends 'Home/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/Home/index.css') }}">
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">
        Accueil
    </li>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-5">
                <div class="row justify-content-around">
                    <div class="col-4">
                        <div class="square-btn-wrapper"
                             data-toggle="tooltip"
                        >
                            <a class="btn btn-primary btn-block square-btn huge-button"
                               href="{{ path('people_create') }}"
                               role="button">
                                <div>
                                    Renseigner<br>
                                    l'annuaire
                                </div>
                                <div>
                                    <i class="icon ion-md-add"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="square-btn-wrapper"
                             data-toggle="tooltip"
                             title="Work in progress...">
                            <a class="btn btn-primary btn-block square-btn huge-button disabled"
                               disabled="disabled"
                               href="#"
                               role="button">
                                <div>
                                    Enregistrer <br>
                                    une adhésion
                                </div>
                                <div>
                                    <i class="icon ion-md-add"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="square-btn-wrapper"
                             data-toggle="tooltip"
                             title="Work in progress...">
                            <a class="btn btn-primary btn-block square-btn huge-button disabled"
                               disabled="disabled"
                               href="#"
                               role="button">
                                <div class="align">
                                    Enregistrer <br>
                                    un don
                                </div>
                                <div>
                                    <i class="icon ion-md-add"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <img src="{{ asset('images/line-chart.jpg') }}" class="border border-primary img-fluid" alt="Des courbes bidons en attendant les vraies.">
                    </div>
                </div>
            </div>
            <div class="col-7">
                <h3>Ex-Adhérents à relancer</h4>
                <table
                    class="table table-striped"
                    data-toggle="datatable"
                    data-number-rows-display=5
                    data-rows="openable"
                >
                    <thead>
                        <tr>
                            <th data-exportable="true" data-sortable="true">Nom</th>
                            <th data-exportable="true" data-sortable="true">Prénom</th>
                            <th data-exportable="true">Téléphone fixe</th>
                            <th data-exportable="true">Téléphone portable</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for individual in people %}
                            <tr data-toggle="tooltip" title="Cliquer pour afficher plus de détails">
                                <td class="align-middle">{{ individual.lastname }}</td>
                                <td class="align-middle">{{ individual.firstname }}</td>
                                <td class="align-middle text-center"><div class="phone">{{ individual.homePhoneNumber }}</div></td>
                                <td class="align-middle text-center"><div class="phone">{{ individual.cellPhoneNumber }}</div></td>
                                <td class="">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-6 pl-2 pr-1 py-2 m-0">
                                                <h5 class="text-center">Adresse</h5>
                                                <p class="border text-center p-2">
                                                    {{ individual.firstName }} {{ individual.lastName }}<br>
                                                    {{ individual.addresses[0].line }}<br>
                                                    {{ individual.addresses[0].postalCode }}
                                                    {{ individual.addresses[0].city | upper }}<br>
                                                    {{ individual.addresses[0].country | upper }}<br>
                                                </p>
                                                <div class="text-center">
                                                    <span class="tooltip-wrapper"
                                                       data-toggle="tooltip"
                                                       title="Work in progress..."
                                                       >
                                                    <a class="btn btn-primary text-white mr-0 disabled">
                                                        <i class="icon ion-md-mail"></i>&nbsp;Enregistrer une relance courrier
                                                    </a>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-6 pr-2 pl-1 py-2 m-0">
                                                <h5 class="text-center">Numéros de téléphone</h5>
                                                <div class="border text-center p-2 mb-3">
                                                    <div class="row">
                                                        {% set splitArray = individual.homePhoneNumber | split('', 2) %}
                                                        {% set homePhoneNumber = splitArray|join(' ') %}
                                                        {% set splitArray = individual.cellPhoneNumber | split('', 2) %}
                                                        {% set cellPhoneNumber = splitArray|join(' ') %}
                                                        {% set splitArray = individual.workPhoneNumber | split('', 2) %}
                                                        {% set workPhoneNumber = splitArray|join(' ') %}
                                                        {% set splitArray = individual.workPhoneNumber | split('', 2) %}
                                                        {% set workPhoneNumber = splitArray|join(' ') %}
                                                        {% set splitArray = individual.workFaxNumber | split('', 2) %}
                                                        {% set workFaxNumber = splitArray|join(' ') %}
                                                        <div class="col-6 text-right pr-1">
                                                            <strong>Fixe&nbsp;:</strong><br>
                                                            <strong>Portable&nbsp;:</strong><br>
                                                            <strong>Professionnel&nbsp;:</strong>
                                                            <strong>Fax&nbsp;:</strong>
                                                        </div>
                                                        <div class="col-6 text-left pl-1">
                                                            {{ homePhoneNumber }}<br>
                                                            {{ cellPhoneNumber }}<br>
                                                            {{ workPhoneNumber }}<br>
                                                            {{ workFaxNumber }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="text-center">
                                                    <span class="tooltip-wrapper"
                                                       data-toggle="tooltip"
                                                       title="Work in progress..."
                                                       >
                                                        <a class="btn btn-primary text-white mr-0 disabled tooltip-test">
                                                            <i class="icon ion-md-call"></i>&nbsp;Enregistrer une relance téléphonique
                                                        </a>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="container-fluid">
                                        <div class="row mt-4">
                                            <div class="col-12 pr-2 pl-2 m-0">
                                                <h5 class="text-center">Adresse mail</h5>
                                                <p class="border text-center p-2">
                                                    {{ individual.emailAddress }}
                                                </p>
                                                <div class="text-center">
                                                    <span class="tooltip-wrapper"
                                                       data-toggle="tooltip"
                                                       title="Work in progress..."
                                                       >
                                                        <a class="btn btn-primary text-white mr-0 disabled">
                                                            <i class="icon ion-md-send"></i>&nbsp;Relancer par mail
                                                        </a>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('javascript/Home/index.js') }}"></script>
{% endblock %}