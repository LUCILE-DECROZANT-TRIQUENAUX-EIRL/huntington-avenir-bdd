{% extends 'Home/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/Home/index.css') }}">
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">
        Accueil
    </li>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-5">
                <div class="row justify-content-around">
                    <div class="col-4">
                        <div class="square-btn-wrapper"
                             data-toggle="tooltip"
                        >
                            <a class="btn btn-primary btn-block square-btn huge-button"
                               href="{{ path('people_create') }}"
                               role="button">
                                <div>
                                    Renseigner<br>
                                    l'annuaire
                                </div>
                                <div>
                                    <i class="icon ion-md-add"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="square-btn-wrapper"
                             data-toggle="tooltip"
                             title="Work in progress...">
                            <a class="btn btn-primary btn-block square-btn huge-button disabled"
                               disabled="disabled"
                               href="#"
                               role="button">
                                <div>
                                    Enregistrer <br>
                                    une adhésion
                                </div>
                                <div>
                                    <i class="icon ion-md-add"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="square-btn-wrapper"
                             data-toggle="tooltip"
                             title="Work in progress...">
                            <a class="btn btn-primary btn-block square-btn huge-button disabled"
                               disabled="disabled"
                               href="#"
                               role="button">
                                <div class="align">
                                    Enregistrer <br>
                                    un don
                                </div>
                                <div>
                                    <i class="icon ion-md-add"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <img src="{{ asset('images/line-chart.jpg') }}" class="border border-primary img-fluid" alt="Des courbes bidons en attendant les vraies.">
                    </div>
                </div>
            </div>
            <div class="col-7">
                <h3>Ex-Adhérents à relancer</h4>
                <table
                    class="table table-striped"
                    data-toggle="datatable"
                    data-number-rows-display=5
                >
                    <thead>
                        <tr>
                            <th data-sortable="true">Nom</th>
                            <th data-sortable="true">Prénom</th>
                            <th>Mail</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for people in peoples %}
                            <tr>
                                <td class="align-middle">{{ people.lastname }}</td>
                                <td class="align-middle">{{ people.firstname }}</td>
                                <td class="align-middle">{{ people.emailAddress }}</td>
                                <td class="align-middle column-action">
                                    <a
                                        href="{{ path('people_show', { 'id': people.id }) }}"
                                        class="btn btn-secondary"
                                        data-toggle="tooltip"
                                        title="Voir le profil"
                                        >
                                        <i class="icon ion-md-eye"></i>
                                    </a>
                                </td>
                                <td class="align-middle column-action">
                                        <a
                                            href="{{ path('people_edit', { 'id': people.id }) }}"
                                            class="btn btn-secondary"
                                            data-toggle="tooltip"
                                            title="Éditer le profil"
                                            >
                                            <i class="icon ion-md-create"></i>
                                        </a>
                                    </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

