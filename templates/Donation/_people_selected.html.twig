<div class="col-2">
    <img class="img-thumbnail" src="{{ asset('images/placeholder-personne.jpg') }}" alt="Profile photo placeholder">
</div>
<div class="col-8">
    <div class="row">
        <div class="col">
            {{ donator.denomination ? donator.denomination.label : "" }} {{ donator.lastname | upper }} {{ donator.firstname }}
        </div>
    </div>
    <div class="row">
        {% if not donator.hasNoAddressDefined() %}
            {% for address in donator.addresses %}
                <div class="col-sm-12">
                    {{address.line}} {{address.postalCode}} {{address.city}}, {{address.country}}
                </div>
            {% endfor %}
        {% else %}
            <div class="col">
                Pas d'adresse enregistr√©e.
            </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col">
            {{ donator.emailAddress ? donator.emailAddress : "-"}}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ donator.cellPhoneNumber ? donator.cellPhoneNumber : "-"}}
        </div>
    </div>
</div>
<div class="col-2 text-right">
    <button id="edit-donator-button" type="button" class="btn btn-secondary">Modifier</button>
</div>